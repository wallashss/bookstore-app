{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "removeComments": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*", "test/**/*", "db/**/*"
  ],
  "exclude": ["node_modules"]
}